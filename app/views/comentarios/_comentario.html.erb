<dl class="dl-horizontal">
  <dt>Titulo:</dt>
  <dd><%= comentario.titulo %></dd>
  <dt>Texto:</dt>
  <dd><%= comentario.texto %></dd>
  <dt>Autor:</dt>
  <dd><%= comentario.usuario.try(:nome) %></dd>
  <% if can? :manage, Comentario %>
    <dd>
      <%= link_to 'Reply', new_comentario_comentario_path(comentario), id: "reply-#{comentario.usuario.nome}-#{comentario.titulo}" %>
      <%= link_to 'Edit', edit_produto_comentario_path(@produto, comentario), id: "edit-#{comentario.usuario.nome}-#{comentario.titulo}" %>
      <%= link_to 'Destroy', [@produto, comentario], method: :delete, data: {confirm: 'Are you sure?'}, id: "destroy-#{comentario.usuario.nome}-#{comentario.titulo}" %>
      <div id="new-reply"></div>
    </dd>
  <% end %>
  <dd>
    <%= render partial: 'comentarios/reply', collection: comentario.comentarios %>
  </dd>
</dl>
